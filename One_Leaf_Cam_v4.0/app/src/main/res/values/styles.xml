<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/DarkSeaGreen</item>
        <item name="colorPrimaryDark">@color/dark_green</item>
        <item name="colorAccent">@color/dark_green</item>
        <item name="android:textColor">@color/dim_grey</item>
    </style>

    <!-- component entry button -->
    <style name="component_entry_button">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">#00000000</item>
        <item name="android:drawablePadding">16dp</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">#FFC107</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#FFFFFF</item>
        <!-- Used for the background -->
        <item name="android:background">@color/DarkSeaGreen</item>
    </style>

</resources>
